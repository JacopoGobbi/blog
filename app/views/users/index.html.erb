<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <% if user == @user %>
            <%= link_to 'Show my account (' + user.username + ')', user %>
          <% else %>
            <%= link_to 'Show ' + user.username, user %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
<%= link_to "Log out", logout_path, method: :delete %>
